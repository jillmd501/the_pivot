%h1.center-align My Trips

.container
  %table{ class: "highlight centered" }
    %thead
      %tr
        %th
        %th
          Adventure
        %th
          Description
        %th
          Price
        %th
          Quantity
        %th
          Edit/Delete
    %tbody
      - @categories.each do |category, count|
        %tr
          %td{ height: "200px", width: "200px" }
            %img{ src: category.image_path, height: "200px", width: "200px" }
          %td{ height: "200px", width: "200px" }
            = category.name
          %td{ height: "200px", width: "200px" }
            = category.description
          %td{ height: "200px", width: "200px" }
            = "$#{category.price}"
          %td{ height: "200px", width: "200px" }
            = count
          %td{ height: "200px", width: "200px" }
            = button_to "Remove", cart_path(category_id: category) , method: :delete

  %p.right-align= "Total: $#{@total}"
