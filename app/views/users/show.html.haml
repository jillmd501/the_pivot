.container
  %h1.center-align.amber-text= "Welcome, #{current_user.username}!"

  %h3.left-align.amber-text= "Past Orders:"
  %table{ class: "highlight centered" }
    %thead
      %tr
        %th
          Order #
        %th
          Ordered On
        %th
          Status
        %th
          Total
    %tbody
      - if current_user.orders
        - current_user.orders.each do |order|
          %tr
            %td{ height: "200px",
                 width: "200px" }
              = link_to "Order ##{order.id}", order_path(order)
            %td{ height: "200px",
                 width: "200px" }
              = order.status_timestamp
            %td{ height: "200px",
                 width: "200px" }
              = order.status
            %td{ height: "200px",
                 width: "200px" }
              = "$#{order.total}"
