.container
  %h1.center-align= "Welcome, #{current_user.username}!"

  %h3.left-align= "Past Orders:"
  %table{ class: "highlight centered" }
    %thead
      %tr
        %th
          Order #
        %th
          Ordered On
        %th
          Status
        %th
          Total
        %th
          Cancel?
    %tbody
      - if current_user.orders
        - current_user.orders.each do |order|
          = render partial: "user_order", locals: { order: order }
