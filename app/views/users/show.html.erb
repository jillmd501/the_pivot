<div class="container large-top-margin">
	<h3>
		Welcome, <%=@user.first_name%>
	</h3>
	<h4>
		User Info:
	</h4>
	<table>
		<thead>
			<th>
				Username
			</th>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
			<th>
				Country
			</th>
			<th>
				State
			</th>
			<th>
				City
			</th>
			<th>
				Address
			</th>
			<th>
				Zip
			</th>
		</thead>
		<tbody>
			<tr>
				<td>
					<%= @user.username %>
				</td>
				<td>
					<%= @user.first_name %>
					<%= @user.last_name %>
				</td>
				<td>
					<%= @user.email %>
				</td>
				<td>
					<%= @user.address.country %>
				</td>
				<td>
					<%= @user.address.state %>
				</td>
				<td>
					<%= @user.address.city %>
				</td>
				<td>
					<%= @user.address.address_line_1 %>
					<%= @user.address.address_line_2 %>
				</td>
				<td>
					<%= @user.address.zipcode %>
				</td>
			</tr>
		</tbody>
	</table>
	<%= button_to "Update Account", "#", class: "btn blue" %>
</div>
