<div class="container large-top-margin">
  <h2>Create a Business</h2>
  <%= form_for Business.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.submit "Apply!", class: "btn blue" %>
  <% end %>
</div>
