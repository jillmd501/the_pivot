<div class="container large-top-margin">
  <div class="row">
    <h2>All Photos for <%= @category.name %> Category</h2>
    <% @photos.each do |photo| %>
      <div class="col s3 photo-col" id="photo_<%= photo.id %>">
        <div class="photo-index">
          <%= image_tag photo.image.url(:small) %>
        </div>
        <div class="photo-text">
          <p>
            <%= link_to photo.name, business_photo_path(photo.business.slug, photo.slug) %>
          </p>
          <p>
            <%= photo.description %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
