%h1.center-align My Trips

.container
  %table{ class: "highlight centered" }
    %thead
      %tr
        %th
        %th
          Adventure
        %th
          Description
        %th
          Price
        %th
          Quantity
        %th
          Edit/Delete
    %tbody
      - @trips.each do |trip, count|
        %tr
          %td{ height: "200px", width: "200px" }
            %img{ src: trip.image_path, height: "200px", width: "200px" }
          %td{ height: "200px", width: "200px" }
            = trip.name
          %td{ height: "200px", width: "200px" }
            = trip.description
          %td{ height: "200px", width: "200px" }
            = "$#{trip.price}"
          %td{ height: "200px", width: "200px" }
            = count
          %td{ height: "200px", width: "200px" }
            = link_to "Remove",
                      cart_path(trip_id: trip),
                      method: :delete,
                      class: "waves-effect waves-light btn"

  %p.right-align= "Total: $#{@total}"
