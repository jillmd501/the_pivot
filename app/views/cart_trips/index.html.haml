%h1.center-align My Trips

.container
  %table{ class: "highlight centered" }
    %thead
      %tr
        %th
        %th
          Adventure
        %th
          Description
        %th
          Price
        %th
          Quantity
        %th
          Edit/Delete
    %tbody
      - @cart.trips.each do |cart_trip|
        %tr
          %td{ height: "200px", width: "200px" }
            %img{ src: cart_trip.image_path, height: "200px", width: "200px" }
          %td{ height: "200px", width: "200px" }
            = cart_trip.name
          %td{ height: "200px", width: "200px" }
            = cart_trip.description
          %td{ height: "200px", width: "200px" }
            = "$#{cart_trip.price}"
          %td{ height: "200px", width: "200px" }
            = cart_trip.quantity
          %td{ height: "200px", width: "200px" }
            = link_to "Remove",
                      cart_path(trip_id: cart_trip.id),
                      method: :delete,
                      class: "waves-effect waves-light btn"

  %p.right-align= "Total: $#{@cart.total_cost}"
