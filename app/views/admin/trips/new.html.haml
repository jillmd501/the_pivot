
%h1.center-align Create a Trip

.container
  = form_for Trip.new, url: admin_city_trips_path do |f|
    = f.label :name
    = f.text_field :name

    = f.label :description
    = f.text_field :description

    = f.label :price
    = f.text_field :price

    = f.label :image_path
    = f.text_field :image_path

    = f.label :info
    = f.text_field :info

    = f.submit "Create New Adventure"
