<div class="container large-top-margin">
<h2>Edit Business Information:</h2>
<%= form_for @business, url: admin_business_path(@business.slug), method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.submit "Update Information", class: "btn blue" %>
<% end  %>