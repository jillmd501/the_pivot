<div class="container medium-top-margin">
	<h2 class="center">Admin Dashboard</h2>
	<h5 class="center">Welcome, <%=@user.first_name%></h5>
	<h5>Your Businesses:</h5>
	<table>
		<thead>
			<th>Name</th>
			<th>Location</th>
		</thead>
		<tbody>
			<% @businesses.each do |business| %>
				<div id="business_<%= business.id %>">
					<tr>
						<td>
							<%= link_to business.name, business_path(business.slug) %>
						</td>
						<td>
							<%= business.location %>
						</td>
						<td>
							<%= button_to "Edit Business", edit_admin_business_path(name: business.slug), method: :get, class: "btn blue"  %>
						</td>
						<td>
							<%= button_to "Edit Photos", admin_business_photos_path(business_name: business.slug), method: :get, class: "btn blue"  %>
						</td>
						<td><%= button_to "Admins", admin_business_users_path(business_name: business.slug), method: :get, class: "btn blue" %></td>
						<td>
						<% if business.status == "Offline" %>
							<%= button_to "Online", toggle_status_admin_business_path(name: business.slug), method: :get, class: "btn green"  %>
						<% else %>
							<%= button_to "Offline", toggle_status_admin_business_path(name: business.slug), method: :get, class: "btn red"  %>
						<% end %>
						</td>
					</tr>
				</div>
			<% end %>
		</tbody>
	</table>
</div>
