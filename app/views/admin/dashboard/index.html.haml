%h1.center Admin Dashboard

%h3 Order Totals by Status:

.container
  - @orders.each do |status, orders|
    %table{ class: "#{status}-table" }
      %thead
        %tr
          %th= status
      %tbody
        %tr
          - orders.each do |order|
            %td
              = link_to "Order ##{order.id}", order_path(order)
        %tr
          %td
            %strong= "Total: #{orders.count}"
