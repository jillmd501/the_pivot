.order.container
  %h1.center-align.amber-text= "Order ##{@order.id}"
  .order-details
    %h4.amber-text Order Details:
    %table
      %thead
        %tr
          %th Date
          %th User
          %th Address
          %th Status
          %th Total
      %tbody
        %tr
          %td
            = "#{@order.status_timestamp}"
          %td
            = "#{@order.user.first_name} #{@order.user.last_name}"
          %td
            = "#{@order.user.full_address}"
          %td
            = "#{@order.status}"
          %td
            = "$#{@order.total}"
  .trips
    %h4.amber-text Order Trips:
    %table
      %thead
        %tr
          %th Name
          %th Quantity
          %th Price
          %th Subtotal

      %tbody
        - @order.trips.each do |trip|
          %tr
            %td
              = trip.name
            %td
              = trip.quantity
            %td
              = "$#{trip.price}"
            %td
              = "$#{trip.subtotal}"
