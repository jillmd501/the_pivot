<div class="container medium-top-margin">
  <table class="borded highlight">
    <thead>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
    </thead>
    <tbody>
      <% @admins.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= button_to "Edit", edit_admin_business_user_path(@business, user), method: :get, class: "btn blue" %></td>
        <td><%= button_to "Delete", admin_business_user_path(@business, user), method: :delete, class: "btn red" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
